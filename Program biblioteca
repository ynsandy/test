#include <iostream>
using namespace std;

int main() {
    int n ;
    int m ;
    while( n <= 10 )
    {
      cout << "Numar carti imprumutate:" ; cin >> n;
      if(n % 2 == 0 )
        m = n/2;
        else if(n % 3 ==0 )
        m = n * 2 / 3;
        else if(n % 3 ==0  && n % 2 == 0)
        m = n/2+1;
        else if(n % 3 !=0  && n % 2 != 0)
        m = n;
      cout << "Utilizatorul este rugat sa restituie " << m <<" publicatii." << endl ;
      
    }
}
